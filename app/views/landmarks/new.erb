<h2>Create New Landmark</h2>

<form method="POST" action="/landmarks">
  <label for="landmark_name">Landmark Name:</label>
  <input type="text" name="landmark[name]" id="landmark_name">
  <% @titles.each do |title| %>
    <input type="checkbox" name="landmark[title_ids][]" id="title_<%= title.id %>"><%= title.name %><br>
  <% end %>
  <label for="title_name">New Title:</label>
  <input type="text" name="title[name]" id="title name">
  <% @figures.each do |figure| %>
    <input type="checkbox" name="landmark[figure_ids][]">
  <% end %>
  <label for="figure_name">New Figure:</label>
  <input type="text" name="figure[name]" id="figure_name">
  <input type="submit">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>