<h2>Create a New Figure:</h2>

<form method="POST" action="/figures">
  <label for="figure_name">Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name">
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>"><%= title.name %><br>
  <% end %>
  <label for="title_name">New Title:</label>
  <input type="text" name="title[name]" id="title name">
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]">
  <% end %>
  <label for="landmark_name">New Landmark:</label>
  <input type="text" name="landmark[name]" id="landmark_name">
  <input type="submit" value="Create">
</form>


<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>